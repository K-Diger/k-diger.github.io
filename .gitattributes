# Auto detect text files and perform LF normalization
* text=auto

# Source code - always LF
*.bash text eol=lf
*.sh text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Markdown - always LF
*.md text eol=lf
*.markdown text eol=lf

# YAML and JSON - always LF
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Ruby - always LF
*.rb text eol=lf
Gemfile text eol=lf
Rakefile text eol=lf

# Jekyll - always LF
_config.yml text eol=lf

# Documentation - always LF
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Windows scripts - CRLF
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pdf binary
